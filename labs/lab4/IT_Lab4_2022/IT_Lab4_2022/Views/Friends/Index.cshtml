@model IEnumerable<IT_Lab4_2022.Models.Friend>

@{
    ViewBag.Title = "Friends";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table id="friendsTable" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Friend_Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MestoZiveenje)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Friend_Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MestoZiveenje)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @*@Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
                    <button data-friend-id="@item.Id" class="btn btn-link js-delete">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts {
    <script>
        $(document).ready(function () {
            var table = $("#friendsTable").DataTable();

            $("#friendsTable .js-delete").on("click", function () {
                var button = $(this);

                bootbox.confirm("Are you sure you want to delete this friend?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/FriendsWebApi/" + button.attr("data-friend-id"),
                            method: "DELETE",
                            success: function () {
                                table.row(button.parents("tr")).remove().draw();
                            },
                            error: function (err) {
                                console.log(err)
                            }
                        });
                    }
                });
            });
        });
    </script>
}

@*
  Without WebApiController we just use an Ajax call and in the url we put: 
    /Friends/Delete/ and method is GET
  Otherwise we use a WebApiController and put: /api/FriendsWebApi/  
    method is DELETE
 *@